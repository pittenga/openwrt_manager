<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".BlankFragment" android:orientation="vertical" android:padding="20dp">

    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:text="@string/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/unameTextView"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/uname" android:importantForAutofill="no"/>
    <TextView
            android:text="@string/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/pwdTextView"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password" android:importantForAutofill="no"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:layout_gravity="end">
        <Button
                android:text="@string/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button"/>
    </LinearLayout>

</LinearLayout>